{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.scss",
          "classnameTransform": "dashes"
        }
      }
    ],
    "resolveJsonModule": true,
    "rootDir": "./",
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "bin",
    "build",
    "coverage",
    "dist",
    "node_modules",
    "public",
    "webpack"
  ]
}
